<ScreenMain>:
	TabbedPanel:
		id:ScreenMain
		do_default_tab: False
		TabbedPanelItem:
			text:'MASTER'
			MasterLayout:
				
		TabbedPanelItem:
			text:'MONEY'
			MoneyLayout:

<MasterLayout>:
	name: 'MasterLayout'
	do_default_tab: False
	TabbedPanelItem:
		text:'Entry'
		Screen_Entry:
	TabbedPanelItem:
		text:'Record'
		on_release: root.on_release()
		Screen_Record:
			id:Screen_Record

<Screen_Entry>:
    name: 'Screen_Entry'
    BoxLayout:
        orientation:'vertical'
        BoxLayout:
            size_hint_y: 1
            orientation:'vertical'
            padding: 8
            MyLabelBig:
                id:title
                text: "=-=- MASTER RECORD -=-="
            MyLabelMid:
                id:lbl_ave
                text: root.lbl_ave
        BoxLayout:
            size_hint_y: 2
            orientation:'vertical'
            padding: 8
            BoxLayout:
                orientation:'horizontal'
                padding: 8
                MyLabelMid:
                    id:lbl_day
                    text: "日にち"
                    halign: 'left'
                    size_hint_x:1
                    #text_size: self.size
                TextInput:
                    id:txt_day
                    text: root.txt_day
                    multiline:False
                    foreground_color:0,0,0,1
                    input_filter: 'int'
					text_language: 'ja'
                    size_hint_x:4
            BoxLayout:
                orientation:'horizontal'
                padding: 8
                MyLabelMid:
                    id:lbl_num
                    text: "回数"
                    halign: 'left'
                    size_hint_x:1
                TextInput:
                    id:txt_num
                    text: root.txt_num
                    multiline:False
                    foreground_color:0,0,0,1
                    input_filter: 'int'
                    size_hint_x:4

        BoxLayout:
            size_hint_y:5
        BoxLayout:
            size_hint_y: 1
            orientation:'horizontal'
            padding: 8
            Button:
                text: "Entry"
                on_press: root.EntryClicked()

<Screen_Record>:
	name: 'Screen_Record'
	BoxLayout:
		orientation:'vertical'
		BoxLayout:
			orientation:'horizontal'
			canvas.before:
				Color:
					rgba: 255, 255, 255, 1
				Line:
					rectangle: self.x, self.y, self.width, self.height
			MyLabelMid:
				text: "DAY"
				size_hint_x: 1
			MyLabelMid:
				text: "NUM"
				size_hint_x: 1
		RecycleView:
			size_hint_y: 5
			id: rv
			scroll_type: ['bars', 'content']
        	viewclass: 'TableRow_Master'
			RecycleBoxLayout:
				default_size: None, 80
				default_size_hint: 1, None
                size_hint_y: None
				height: self.minimum_height
                orientation: 'vertical'
			# Button:
			# 	text: "DataRepair"
			# 	on_press: root.DataRepair()

<TableRow_Master@BoxLayout>:
    orientation: 'horizontal'
    day: ''
    num: ''
	canvas.before:
        Color:
            rgba: 255, 255, 255, 1
        Line:
            rectangle: self.x, self.y, self.width, self.height
    MyLabelMid:
        text: root.day
		size_hint_x: 1
    MyLabelMid:
        text: root.num
		size_hint_x: 1

<MoneyLayout>:
	name: 'MoneyLayout'
	TabbedPanel:
		do_default_tab: False
		TabbedPanelItem:
			text:'Entry'
			Screen_Entry_Money:
		TabbedPanelItem:
			text:'Record'
			on_release: root.on_release()
			Screen_Record_Money:
				id:Screen_Record_Money
		TabbedPanelItem:
			text:'Config'
			Screen_Config_Money:

<Screen_Entry_Money>:
	name: 'Screen_Entry_Money'
	BoxLayout:
		orientation:'vertical'
		MyLabelBig:
			id:title_money
			text: "=~=~ MONEY MONEY MONEY ~=~="
		BoxLayout:
			size_hint_y: 1
			orientation:'horizontal'
			padding: 8
			MyLabelMid:
				id:lbl_day_money
				text: "Day"
				halign: 'center'
				size_hint_x:1
			TextInput:
				id:txt_day_money
				text: root.txt_day_money
				multiline:False	#1行
				foreground_color:0,0,0,1	#文字色
				input_filter: 'int'
				size_hint_x:5
		BoxLayout:
			size_hint_y: 1
			orientation:'horizontal'
			padding: 8
			Spinner:
				id: spn_inout
				size_hint_y: 1
				size_hint_x: 0.4
				text: '収支'
				values: '支出', '収入'
				on_text:root.get_kind()
			Spinner:
				id: spn_kind
				size_hint_y: 1
				size_hint_x: 0.4
				pos_hint_x:2
				text: 'Kind'
				values:
		BoxLayout:
			orientation:'horizontal'
			size_hint_y: 1
			padding: 8
			MyLabelMid:
				id:lbl_money_money
				text: "Money"
				halign: 'center'
				size_hint_x:1
			TextInput:
				id:txt_money_money
				text: ''
				multiline:False	#1行
				foreground_color:0,0,0,1	#文字色
				input_filter: 'int'
				size_hint_x:5

		BoxLayout:
			orientation:'horizontal'
			size_hint_y: 1
			padding: 8
			MyLabelMid:
				id:lbl_free_money
				text: "自由記入欄"
				halign: 'center'
				size_hint_x:1
			TextInput:
				id:txt_free_money
				text: ''
				foreground_color:0,0,0,1	#文字色
				size_hint_x:5
		BoxLayout:
			size_hint_y: 3
		BoxLayout:
			size_hint_y: 1
			orientation:'horizontal'
			padding: 8
			Button:
				text: "Entry"
				on_press:root.entry_data()

<Screen_Record_Money>:
	name: 'Screen_Record_Money'
	BoxLayout:
		orientation:'vertical'
		BoxLayout:
			orientation:'horizontal'
			canvas.before:
				Color:
					rgba: 255, 255, 255, 1
				Line:
					rectangle: self.x, self.y, self.width, self.height
			MyLabelMid:
				text: "日にち"
				size_hint_x: 2
			MyLabelMid:
				text: "収支"
				size_hint_x: 1
			MyLabelMid:
				text: "カテゴリー"
				size_hint_x: 2
			MyLabelMid:
				text: "金額"
				size_hint_x: 1
			MyLabelMid:
				text: "備考"
				size_hint_x: 2
		RecycleView:
			size_hint_y: 5
			id: rv_money
			scroll_type: ['bars', 'content']
        	viewclass: 'TableRow_Money'
			RecycleBoxLayout:
				default_size: None, 80
				default_size_hint: 1, None
                size_hint_y: None
				height: self.minimum_height
                orientation: 'vertical'

<TableRow_Money@BoxLayout>:
    orientation: 'horizontal'
    day: ''
    inout: ''
    category: ''
    price: ''
    free: ''
	canvas.before:
        Color:
            rgba: 255, 255, 255, 1
        Line:
            rectangle: self.x, self.y, self.width, self.height
    MyLabelMin:
        text: root.day
		size_hint_x: 2
    MyLabelMin:
        text: root.inout
		size_hint_x: 1
    MyLabelMin:
        text: root.category
		size_hint_x: 2
    MyLabelMin:
        text: root.price
		size_hint_x: 1
    MyLabelMin:
        text: root.free
		size_hint_x: 2
		halign: 'center'
		valign: 'middle'
		text_size: self.size

<Screen_Config_Money>:
	name: 'Screen_Config_Money'
	BoxLayout:
		orientation:'vertical'
		MyLabelBig:
			id:lbl_Genre_money
			text: "Genre"
			halign: 'center'
			size_hint_x:1
		BoxLayout:
			orientation:'horizontal'
			MyLabelMid:
				id:lbl_money_kind_inout
				text: "Category1"
				halign: 'center'
				size_hint_x:1
			Spinner:
				id: spn_inout2
				size_hint_y: 1
				size_hint_x:5
				valign: 'center'
				halign: 'center'
				text: '収支'
				values: '支出', '収入'
		BoxLayout:
			orientation:'horizontal'
			MyLabelMid:
				id:lbl_money_kind_edtail
				text: "Category2"
				valign: 'center'
				halign: 'center'
				size_hint_x:1
			TextInput:
				id:txt_money_kind
				text: ''
				multiline:False	#1行
				foreground_color:0,0,0,1	#文字色
				size_hint_x:5
		BoxLayout:
			size_hint_y: 1
			orientation:'horizontal'
			Button:
				size_hint_x:0.5
				text: "Entry"
				on_press:root.DataEntry()
		BoxLayout:
			size_hint_y: 1
		MyLabelBig:
			id:lbl_SalaryDayTitle_money
			text: "Salary Day"
			halign: 'center'
			size_hint_x:1
		BoxLayout:
			size_hint_y: 1
			orientation:'horizontal'
			MyLabelMin:
				id:lbl_SalaryDay_money
				text: "Day(input 1 to 31)"
				halign: 'center'
				size_hint_x:1
			TextInput:
				id:txt_SalaryDay_money
				text: ''
				multiline:False	#1行
				foreground_color:0,0,0,1	#文字色
				input_filter: 'int'
				size_hint_x:5
		BoxLayout:
			size_hint_y: 1
			orientation:'horizontal'
			Button:
				text: "Entry"
				on_press:

<MySpinnerOption@SpinnerOption>:
    halign: 'left'
    valign: 'middle'
    font_size: '16pt'

<MyLabelBig@Label>:
	font_size: 48

<MyLabelMid@Label>:
	font_size: 24

<MyLabelMin@Label>:
	font_size: 16